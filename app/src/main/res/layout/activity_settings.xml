<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.SettingsActivity"
    android:layout_margin="12dp"
    android:background="@color/colorWrite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:onClick="onClickChangePassword"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_btn" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password_text"
        android:onClick="onClickChangePassword"
        android:layout_marginEnd="30dp"
        android:textColor="#555555"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/delete_account"
        android:onClick="onClickDeleteAccount"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_btn" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_text"
        android:onClick="onClickDeleteAccount"
        android:layout_marginEnd="30dp"
        android:textColor="#555555"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>